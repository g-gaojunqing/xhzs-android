<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DrawBoardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/draw_iv"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/draw_iv"
            android:background="#FFFFFF">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/drawing_bt"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                android:background="@drawable/ic_delete_black_24dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/draw_reply_bt"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_return_24"
                android:background="@drawable/selector_press"
                android:rotation="90"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/draw_reply_reply_bt"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_return_return_24"
                android:background="@drawable/selector_press"
                android:rotation="-90"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <ToggleButton
                android:id="@+id/draw_eraser_tb"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_margin="2dp"
                android:background="@drawable/draw_selector_eraser"
                android:textOff=""
                android:textOn=""/>
            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <ToggleButton
                android:id="@+id/draw_pen_tb"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                android:background="@drawable/draw_selector_pen"
                android:textOff=""
                android:textOn=""/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/draw_position_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/draw_pen_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:background="@drawable/shape_communicate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="细"/>
                <SeekBar
                    android:id="@+id/draw_width_sb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粗"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浅"/>
                <SeekBar
                    android:id="@+id/draw_depth_sb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center">
                <RadioGroup
                    android:id="@+id/draw_pencil_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/draw_color0_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        style="@style/MyRadioButtonStyle"
                        android:backgroundTint="#000000"/>
                    <RadioButton
                        android:id="@+id/draw_color1_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        style="@style/MyRadioButtonStyle"
                        android:backgroundTint="#FF0000"/>
                    <RadioButton
                        android:id="@+id/draw_color2_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        style="@style/MyRadioButtonStyle"
                        android:backgroundTint="#00FF00"/>
                    <RadioButton
                        android:id="@+id/draw_color3_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        style="@style/MyRadioButtonStyle"
                        android:backgroundTint="#0000FF"/>
                    <RadioButton
                        android:id="@+id/draw_color4_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        android:backgroundTint="#FFFF00"
                        style="@style/MyRadioButtonStyle"/>
                    <RadioButton
                        android:id="@+id/draw_color5_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        android:backgroundTint="#FF00FF"
                        style="@style/MyRadioButtonStyle"/>
                    <RadioButton
                        android:id="@+id/draw_color6_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        android:backgroundTint="#00FFFF"
                        style="@style/MyRadioButtonStyle"/>
                    <RadioButton
                        android:id="@+id/draw_color7_rb"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="3dp"
                        android:backgroundTint="#FFEFDB"
                        style="@style/MyRadioButtonStyle"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/draw_eraser_ll"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:background="@drawable/shape_communicate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="细"/>
                <SeekBar
                    android:id="@+id/draw_eraser_sb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粗"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>